#!groovy
properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '2', numToKeepStr: '2')), disableConcurrentBuilds(), disableResume(), parameters([string(defaultValue: 'create', description: '', name: 'OPERATION', trim: true), string(defaultValue: '1', description: '', name: 'COUNT', trim: true)])])
node('builder-1') {
  ansiColor('xterm') {
    stage('Checkout')  {
      git credentialsId: 'master-github-ssh', url: 'git@github.com:Ihor-Porokhnia/CICD.git'
    }

    stage('Set Terraform') {

      script {
        def tfHome = tool name: 'Terraform'
        env.PATH = "${tfHome}:${env.PATH}"
      }
    }

    stage('TerraPlay')  {
      if (OPERATION == 'create') {
        withCredentials([[$class: 'VaultTokenCredentialBinding', addrVariable: 'VAULT_ADDR', credentialsId: 'az01tf1', tokenVariable: 'VAULT_TOKEN', vaultAddr: 'https://vault.bugoga.ga'], string(credentialsId: 'tf-cloud-token', variable: 'TFE_TOKEN')]) {
          //TF_LOG=DEBUG OCI_GO_SDK_DEBUG=v          
          sh "echo 'credentials \"app.terraform.io\" { token = \"${TFE_TOKEN}\" } ' > $HOME/.terraformrc"
          sh 'terraform init -var-file="./devexp/terra/plan_vault/terraform.tfvars" ./devexp/terra/plan_vault'
          sh 'terraform graph -var-file="./devexp/terra/plan_vault/terraform.tfvars" ./devexp/terra/plan_vault > gra'
          try { sh 'terraform apply -auto-approve -var-file="./devexp/terra/plan_vault/terraform.tfvars" ./devexp/terra/plan_vault' }
          finally { sh 'rm $HOME/.terraformrc' }
        }
      }

      else if (OPERATION == 'destroy') {
        withCredentials([[$class: 'VaultTokenCredentialBinding', addrVariable: 'VAULT_ADDR', credentialsId: 'az01tf1', tokenVariable: 'VAULT_TOKEN', vaultAddr: 'https://vault.bugoga.ga'], string(credentialsId: 'tf-cloud-token', variable: 'TFE_TOKEN')]) {
          sh "echo 'credentials \"app.terraform.io\" { token = \"${TFE_TOKEN}\" } ' > $HOME/.terraformrc"
          sh 'terraform init  -var-file="./devexp/terra/plan_vault/terraform.tfvars" ./devexp/terra/plan_vault'
          try { sh 'terraform destroy -auto-approve -var-file="./devexp/terra/plan_vault/terraform.tfvars" ./devexp/terra/plan_vault' }
          finally { sh 'rm $HOME/.terraformrc' }
        }
      }

      else if (OPERATION == 'test') {
        withCredentials([[$class: 'VaultTokenCredentialBinding', addrVariable: 'VAULT_ADDR', credentialsId: 'az01tf1', tokenVariable: 'VAULT_TOKEN', vaultAddr: 'https://vault.bugoga.ga']]) {
          sh "terraform init ./devexp/terra/plan_vault"
          sh 'terraform plan ./devexp/terra/plan_vault'
        }
      }

    }
  }
}
