#!groovy
properties([[$class: 'JiraProjectProperty'], buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '2', numToKeepStr: '2')), disableConcurrentBuilds(), disableResume(), parameters([string(defaultValue: 'create', description: '', name: 'OPERATION', trim: true), string(defaultValue: '1', description: '', name: 'COUNT', trim: true)])])
node('Frontend') {
  stage('Checkout')  {
    git credentialsId: 'ssh-key-main', url: 'git@github.com:Ihor-Porokhnia/CICD.git'
  }
  stage('TerraPlay')  {
    //sh 'echo $OPERATION'
    if (OPERATION == 'cluster'){
              sh 'terraform init ./terrafiles/plan_03'
              sh 'terraform plan ./terrafiles/plan_03'
              sh 'terraform apply -auto-approve ./terrafiles/plan_03'
              sh 'kubectl apply -f ./kuberpunk/start-deploy.yaml'
              sh 'kubectl patch svc lb-nginx -p \'{"spec":{"loadBalancerIP":"\'"${EXT_IP}"\'"}}\''
              sh 'env'
    }
    else if (OPERATION == 'uncluster') {
              sh 'terraform init ./terrafiles/plan_03'
              sh 'terraform plan ./terrafiles/plan_03'
              sh 'terraform destroy -auto-approve ./terrafiles/plan_03'
    }
    else if (OPERATION == 'create') {
              sh 'terraform init ./terrafiles/plan_02'
              sh 'terraform plan -var="instance_count=$COUNT" ./terrafiles/plan_02'
              sh 'terraform apply -auto-approve -var="instance_count=$COUNT" ./terrafiles/plan_02'

    }
    else if (OPERATION == 'destroy') {
              sh 'terraform init ./terrafiles/plan_02'
              sh 'terraform plan -var="instance_count=$COUNT" ./terrafiles/plan_02'
              sh 'terraform destroy -auto-approve -var="instance_count=$COUNT" ./terrafiles/plan_02'
    }

  }
}
