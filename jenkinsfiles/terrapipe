#!groovy

node('master') {
  stage('Checkout')  {
       
    git credentialsId: 'ssh-key-main', url: 'git@github.com:Ihor-Porokhnia/CICD.git'
    sh 'terraform init ./terrafiles/plan_01'
    sh 'terraform plan ./terrafiles/plan_01'
    sh 'terraform apply -auto-approve ./terrafiles/plan_01'
    }
}
